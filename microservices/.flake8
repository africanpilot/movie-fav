[flake8]
max-line-length = 120
max-complexity = 10
ignore = E203,W503,E501,C901
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    migrations,
    .local,
    .pytest_cache,
    node_modules,
    **/site-packages/**,
    **/.local/**,
per-file-ignores =
    __init__.py:F401
    **/test_*.py:S101
    **/tests.py:S101
    **/config/*.py:F403,F405
    **/services.py:E402
